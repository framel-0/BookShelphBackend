@model IEnumerable<BookShelph.Models.AudioFile>

@{
    ViewData["Title"] = "Index";
}

<div id="modal-placeholder"></div>

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                Audio File
                <span class="d-block text-muted pt-2 font-size-sm">Index</span>
            </h3>
        </div>
        <div class="card-toolbar">
            <!--begin::Button-->
            <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#add-audio" data-url="@Url.Action("Create", "AudioFiles")">
                Add Audio
            </button>
            <!--end::Button-->
        </div>
    </div>
    <div class="card-body">
        @await Html.PartialAsync("_TablePartial", Model)
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#audio-files').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ],

            });

            $("audio").on("play", function () {
                $("audio").not(this).each(function (index, audio) {
                    audio.pause();
                });

            });
        });
    </script>
}

