@model IEnumerable<BookShelph.Models.Narrator>
<!--begin: Datatable-->
<table class="table table-separate table-head-custom table-hover table-striped" id="narrators" data-url="@Url.Action("Index")">
    <thead>
        <tr>

            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OtherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>Actoins</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OtherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td nowrap="nowrap">
                    <button type="button" class="btn btn-transparent-warning font-weight-bold mr-2 btn-sm" data-toggle="ajax-modal" data-target="#edit-narrator" data-url="@Url.Action("Edit", "Narrators", new { id = @item.Id})">
                        Edit
                    </button>
                    <button type="button" class="btn btn-transparent-danger font-weight-bold mr-2 btn-sm" data-toggle="ajax-modal" data-target="#delete-narrator" data-url="@Url.Action("Delete", "Narrators", new { id = @item.Id})">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!--end: Datatable-->
